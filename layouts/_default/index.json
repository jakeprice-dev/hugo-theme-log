{{- .Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{ $.Scratch.Add "index" (dict "id" (string .Params.id) "title" (.Title | htmlUnescape | plainify) "date" (.Date.Format "2006-01-02") "tags" .Params.tags "url" .Permalink "link" .Params.link "types" .Params.types "content" (.Content | htmlUnescape | plainify )) }}
{{- end -}}
{{ $.Scratch.Get "index" | jsonify }}
